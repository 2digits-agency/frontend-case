{
  "name": "2digits-blog-case",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:web": "next dev --turbo",
    "dev": "turbo dev:web",
    "build:web": "next build",
    "build": "turbo build:web",
    "start": "next start",
    "types": "tsc --noEmit",
    "fix": "pnpm '/(lint|format):fix$/'",
    "format": "prettier \"**/*\" --ignore-unknown --check --cache",
    "format:fix": "prettier \"**/*\" --ignore-unknown --write --cache",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --fix --cache",
    "check": "turbo --continue format lint types",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "graphql": "^16.9.0",
    "graphql-request": "^7.1.2",
    "next": "^15.1.0",
    "ofetch": "^1.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "server-only": "^0.0.1",
    "tailwind-variants": "^0.2.1"
  },
  "devDependencies": {
    "@2digits/eslint-config": "^2.9.8",
    "@2digits/prettier-config": "^2.5.1",
    "@2digits/tsconfig": "^0.6.2",
    "@graphql-codegen/cli": "^5.0.3",
    "@graphql-codegen/import-types-preset": "^3.0.0",
    "@graphql-codegen/typescript": "^4.1.1",
    "@graphql-codegen/typescript-generic-sdk": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.3.1",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.16",
    "turbo": "^2.2.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.3",
  "prettier": "@2digits/prettier-config"
}
